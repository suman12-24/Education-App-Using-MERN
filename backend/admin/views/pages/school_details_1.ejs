    <script src="/Template/dist/js/demo.js"></script>

    <!-- JavaScript -->
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const approveBtn = document.getElementById("approveBtn");

            async function toggleApproval(schoolId, imageType) {
                try {
                    const isApproved = approveBtn.classList.contains("btn-primary");

                    const response = await fetch(`/admin/approve-deactivate-profile-cover-image`, {
                        method: "POST",
                        headers: { "Content-Type": "application/json" },
                        body: JSON.stringify({ schoolId: schoolId, imageType: imageType })
                    });

                    const { success, newStatus } = await response.json();
                    console.log(success, newStatus);

                    if (success) {
                        approveBtn.textContent = newStatus ? "Disapprove" : "Approve";
                        approveBtn.classList.toggle("btn-danger", newStatus);
                        approveBtn.classList.toggle("btn-primary", !newStatus);
                    } else {
                        alert("Failed to update status");
                    }
                } catch (error) {
                    console.error("Error updating status:", error);
                }
            }

            function openImageModal(imageUrl, isApprovable, schoolId, imageType) {
                document.getElementById("modalImage").src = imageUrl;

                if (isApprovable) {
                    approveBtn.classList.remove("d-none");
                    approveBtn.onclick = () => toggleApproval(schoolId, imageType);
                } else {
                    approveBtn.classList.add("d-none");
                }

                $('#imageModal').modal('show');
            }

            // Make openImageModal globally accessible
            window.openImageModal = openImageModal;
        });
    </script>



    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const toggleButton = document.querySelector("#toggleButton");
            const schoolId = "<%= school.id %>";  // Ensure you pass the correct school ID

            toggleButton.addEventListener("click", async () => {
                try {
                    const isApproved = toggleButton.classList.contains("btn-primary");

                    const response = await fetch(`/admin/approve-deactivate-school`, {
                        method: "POST",
                        headers: { "Content-Type": "application/json" },
                        body: JSON.stringify({ schoolId: schoolId })
                    });

                    const { success, newStatus } = await response.json();
                    console.log(success, newStatus);
                    if (success) {
                        toggleButton.textContent = newStatus ? "Deactivate" : "Approve";
                        toggleButton.classList.toggle("btn-danger", newStatus);
                        toggleButton.classList.toggle("btn-primary", !newStatus);
                    } else {
                        alert("Failed to update status");
                    }
                } catch (error) {
                    console.error("Error updating status:", error);
                }
            });
        });
    </script>
</body>

</html>